    <div id="success-message">Success! Congratulations on completing the crossword!</div>

    <script>
        function checkCompletion() {
            let allCorrect = true;
            document.querySelectorAll('.crossword input').forEach(input => {
                if (input.value.toLowerCase() !== input.getAttribute('data-answer')) {
                    allCorrect = false;
                }
            });
            return allCorrect;
        }

        document.querySelectorAll('.crossword input').forEach(input => {
            input.addEventListener('input', function() {
                if (this.value === "") {
                    this.style.backgroundColor = "transparent";
                    this.style.color = "black";
                } else if (this.value.toLowerCase() === this.getAttribute('data-answer')) {
                    this.style.backgroundColor = "#ff6d43";
                    this.style.color = "black";
                } else {
                    this.style.backgroundColor = "#002d3c";
                    this.style.color = "white";
                }

                if (checkCompletion()) {
                    document.getElementById('success-message').style.display = 'block';
                } else {
                    document.getElementById('success-message').style.display = 'none';
                }
            });
        });
    </script>
